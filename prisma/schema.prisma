generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String           @id @default(cuid())
  username       String           @unique
  passwordHash   String
  role           UserRole         @default(USER)
  profileUrl     String?
  isActive       Boolean          @default(true)
  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @updatedAt
  lastLoginAt    DateTime?
  passwordResets PasswordReset[]
  createdThemes  Theme[]
  sessionTokens  SessionToken[]
}

enum UserRole {
  USER
  THEME_CREATOR
  ADMIN
  SUPER_ADMIN
}

model PasswordReset {
  id        String   @id @default(cuid())
  userId    String
  token     String   @unique
  expiresAt DateTime
  used      Boolean  @default(false)
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([token])
  @@index([userId])
}

model SessionToken {
  id        String   @id @default(cuid())
  userId    String
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([token])
  @@index([userId])
}

model Theme {
  id          String   @id @default(cuid())
  themeId     String   @unique  // ID from theme JSON (e.g., "cinema_director_mode")
  name        String
  description String?
  creatorName String
  themeJson   String   // JSON data for the theme
  category    String?  // Dark, Light, AMOLED
  previewData String?  // JSON for preview rendering
  likesCount  Int      @default(0)
  viewsCount  Int      @default(0)
  status      ThemeStatus @default(PENDING)
  createdBy   String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  creator     User?    @relation(fields: [createdBy], references: [id], onDelete: SetNull)

  @@index([themeId])
  @@index([status])
}

enum ThemeStatus {
  PENDING
  APPROVED
  REJECTED
  BROKEN
}

model ThemeLike {
  id        String   @id @default(cuid())
  themeId   String
  userToken String   // Anonymous user token
  createdAt DateTime @default(now())

  @@unique([themeId, userToken])
  @@index([themeId])
}

model ThemeView {
  id        String   @id @default(cuid())
  themeId   String
  userToken String   // Anonymous user token
  createdAt DateTime @default(now())

  @@unique([themeId, userToken])
  @@index([themeId])
}

model AppSettings {
  id                        String   @id @default(cuid())
  defaultPreviewBackground String?  // Default background image URL for theme previews
  updatedAt                 DateTime @updatedAt
}
